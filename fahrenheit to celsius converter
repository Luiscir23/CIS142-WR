// convert fahrenheit to celsius.cpp : This file contains the 'main' function. Program execution begins and ends there.

#include <iostream>
using namespace std;

int main()
{
	double tempf; // fahrenheit temperature
	double tempc; // celsius temperature

	cout << "Convert temperature from Fahrenheit to Celsius.\n";
	cout << "Enter temperature in Fahreinheit:\n";
	cin >> tempf;
	// have user input temperature in fahrenheit
	tempc = ( tempf - 32 ) / 1.8;
	// convert fahrenheit temperature to celsius
	cout << tempf << " degrees Fahrenheit is " << tempc << " degrees Celsius.\n";
	// output conversion
	if ( tempf >= 70 ) { // display the hot statement if the temnperature in fahzrenheit is higher than 70 degrees
		cout << "It is going to be hot today!";
	}
	else { //display the cool statement if the temperature in fahrenheit is lower than 70 degrees
		cout << "It is going to be cool today!";
	}
}
